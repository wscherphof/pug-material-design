//- include ../../button
include /pug-material-design/button

style.
  .p {
    margin: 0.5em 0;
  }

.p: +textButton('text button')
.p: +outlinedButton('outlined button')
.p: +raisedButton('raised button')
.p: +unelevatedButton('unelevated button')
br
.p: +textButton({ label: 'text button leading icon', icon: 'face' })
.p: +outlinedButton({ label: 'outlined button leading icon', icon: 'face' })
.p: +raisedButton({ label: 'raised button leading icon', icon: 'face' })
.p: +unelevatedButton({ label: 'unelevated button leading icon', icon: 'face' })
br
.p: +textButton({ label: 'text button trailing icon', icon: { icon: 'face', trailing: true } })
.p: +outlinedButton({ label: 'outlined button trailing icon', icon: { icon: 'face', trailing: true } })
.p: +raisedButton({ label: 'raised button trailing icon', icon: { icon: 'face', trailing: true } })
.p: +unelevatedButton({ label: 'unelevated button trailing icon', icon: { icon: 'face', trailing: true } })
br

//- include ../../iconButton
include /pug-material-design/iconButton

.p Icon button
  +iconButton('favorite', 'icon button')
.p Icon toggle button
  +iconToggleButton('favorite_border', 'icon toggle button', 'favorite')
.p Icon toggle button on
  +iconToggleButton('favorite_border', 'icon toggle button on', 'favorite', true)
br

//- include ../../textField
include /pug-material-design/textField

.p: +filledTextField('name', 'filledTextField')
.p: +outlinedTextField('name', 'outlinedTextField')
.p: +filledTextArea('name', 'filledTextArea')
.p: +outlinedTextArea('name', 'outlinedTextArea')
